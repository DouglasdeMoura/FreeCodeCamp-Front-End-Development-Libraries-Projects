{
  "name": "react-starter",
  "version": "1.0.0",
  "description": "React project starter with Prettier, ESlint, Commitlint, Storybook and Jest.",
  "repository": "https://github.com/douglasdemoura/react-starter",
  "author": "Douglas Moura <douglas.ademoura@gmail.com> (https://douglasmoura.dev)",
  "license": "MIT",
  "source": "src/index.html",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o storybook",
    "generate": "yarn plop --plopfile generators/plopfile.js",
    "test": "jest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^0.1.2",
    "@vitejs/plugin-react": "^1.3.2",
    "axios": "^0.27.2",
    "jest-environment-jsdom": "^28.1.1",
    "react": "^18.2.0",
    "react-content-loader": "^6.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^3.1.4",
    "react-icons": "^4.4.0",
    "react-query": "^3.39.1",
    "react-router-dom": "6",
    "vite": "^2.9.12"
  },
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@storybook/addon-a11y": "^6.5.9",
    "@storybook/addon-actions": "^6.5.9",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addon-interactions": "^6.5.9",
    "@storybook/addon-links": "^6.5.9",
    "@storybook/builder-vite": "^0.1.36",
    "@storybook/react": "^6.5.9",
    "@storybook/testing-library": "^0.0.13",
    "@swc/core": "^1.2.205",
    "@swc/jest": "^0.2.21",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.1",
    "@types/jest": "^28.1.3",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@types/user-event": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "@typescript-eslint/utils": "^5.29.0",
    "autoprefixer": "^10.4.7",
    "babel-loader": "^8.2.5",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-jest-dom": "^4.0.2",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.5.13",
    "eslint-plugin-tailwindcss": "^3.5.2",
    "eslint-plugin-testing-library": "^5.5.1",
    "husky": ">=8",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^28.1.1",
    "jest-axe": "^6.0.0",
    "jest-watch-typeahead": "^1.1.0",
    "lint-staged": ">=13",
    "msw": "^0.42.3",
    "plop": "^3.1.1",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.1.4",
    "typescript": "^4.7.4",
    "vite-plugin-environment": "^1.1.1"
  },
  "resolutions": {
    "@types/react": "^18.0.14"
  },
  "lint-staged": {
    "*.{ts,tsx,jsx,js}": [
      "eslint --fix",
      "jest --findRelatedTests --bail"
    ]
  },
  "msw": {
    "workerDirectory": "public"
  }
}
